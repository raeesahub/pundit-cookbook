<div class="container" class="d-flex justify-content-center">
  <h1 id="new-recipe" class="text-center">New recipe</h1>
  <div class="form">
    <%= simple_form_for @recipe do |f| %>
      <%= f.input :name %>
      <%= f.input :image_url %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: "btn btn-outline-light" %>
    <% end %>
  </div>
</div>
